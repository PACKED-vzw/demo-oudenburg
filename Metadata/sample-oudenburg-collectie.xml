<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    oudenburg-set.xml is een voorbeeld xml waarin alle records in 1 xml zitten. Deze xml bevat bijvoorbeeld de metadata over alle objecten van een heemkundige kring.
    Elementen zonder prefix behoren tot de oudenburg-dc namespace. Die wordt gevalideerd door de oudenburg-set.xsd die mee in de map van deze xml zit. 
    De oudenburg.xsd valideert enkel de <set> en <record> nodes van de records.
    De marcrel en cld elementen worden niet gevalideerd omdat er geen officiele schema's beschikbaar zijn.-->

<!-- Wrapper voor alle records van een set. Een set is bvb alle beelden van een zelfde krant. -->
<descriptionSet 
    xmlns="http://example.org/oudenburg-dc"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:dc=" http://purl.org/dc/elements/1.1/"
    xmlns:dcterms="http://purl.org/dc/terms/"
    xmlns:marcrel="http://www.loc.gov/loc.terms/relators/"
    xmlns:cld="http://purl.org/cld/terms/"
    xsi:schemaLocation=
        "http://example.org/oudenburg-dc oudenburg-set.xsd 
        http://purl.org/dc/elements/1.1/ http://dublincore.org/schemas/xmls/qdc/2008/02/11/dc.xsd 
        http://purl.org/dc/terms/ http://dublincore.org/schemas/xmls/qdc/2008/02/11/dcterms.xsd">
    <!-- record 1 -->
    <description>
        <dcterms:identifier>[Collectienummer]</dcterms:identifier>
        <dcterms:type>Collection</dcterms:type>
        <dcterms:title>[Collectienaam]</dcterms:title>
        <dcterms:description>[Collectiebeschrijving]</dcterms:description>
        <cld:itemFormat>[Materialen]</cld:itemFormat>
        <dcterms:extent>[Omvang]</dcterms:extent>
        <dcterms:spatial>[Geografisch trefwoord]</dcterms:spatial>
        <dcterms:provenance>[Eigendomsgeschiedenis]</dcterms:provenance>
        <marcrel:own>Eigenaar</marcrel:own>
        <dc:creator>verzamelaar</dc:creator>
        <dcterms:created>datering verzameling</dcterms:created>
        <cld:isLocatedAt>Bewaarplaats</cld:isLocatedAt>
        <dcterms:accrualMethod>Methode verwerving</dcterms:accrualMethod>
        <dcterms:accrualPolicy>Motivering mbt Verzamelbeleid</dcterms:accrualPolicy>
        <dcterms:rightsHolder>Rechthebbenden</dcterms:rightsHolder>
        <dcterms:accessRights>Beperkingen toegang</dcterms:accessRights>
    </description>  
    <!-- record 2 -->
    <description>
        <dcterms:identifier>[Collectienummer]</dcterms:identifier>
        <dcterms:type>Collection</dcterms:type>
        <dcterms:title>[Collectienaam]</dcterms:title>
        <dcterms:description>[Collectiebeschrijving]</dcterms:description>
        <cld:itemFormat>[Materialen]</cld:itemFormat>
        <dcterms:extent>[Omvang]</dcterms:extent>
